{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "keyVaultName": {
      "type": "string",
      "defaultValue": "[concat('kv-', uniqueString(resourceGroup().id))]",
      "metadata": {
        "description": ""
      }
    },
    "objectId": {
      "type": "string",
      "metadata": {
        "description": "Specifies the object Id of the AD user. Get using Get-AzureRmADUser or Get-AzureRmADServicePrincipal cmdlets."
      }
    },
    "tenantId": {
      "type": "string",
      "defaultValue": "[subscription().tenantId]",
      "metadata": {
        "description": "Specifies the tenant ID of the subscription. Get using Get-AzureRmSubscription cmdlet or Get Subscription API."
      }
    },
    "keysPermissions": {
      "type": "array",
      "defaultValue": [
        "list"
      ],
      "metadata": {
        "description": "Permissions to keys in the vault. Valid values are: all, create, import, update, get, list, delete, backup, restore, encrypt, decrypt, wrapkey, unwrapkey, sign, and verify."
      }
    }
  },
  "variables": {
    "Default-KV-Keep-Policies": {
      "KV-Keep-Policies": false
    },
    "keepPolicies": "[bool(union(variables('Default-KV-Keep-Policies'), resourceGroup().tags)['KV-Keep-Policies'])]",
    "defaultAccessPolicies": [
      {
        "tenantId": "[parameters('tenantId')]",
        "objectId": "[parameters('objectId')]",
        "permissions": {
          "keys": "[parameters('keysPermissions')]"
        }
      }
    ]
  },
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2019-10-01",
      "name": "prepareTemplate",
      "properties": {
        "expressionEvaluationOptions": {
          "scope": "outer"
        },
        "mode": "Incremental",
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "variables": {
          },
          "resources": [
          ],
          "outputs": {
            "keyVaultName": {
              "type": "string",
              "value": "[parameters('keyVaultName')]"
            },
            "accessPolicies": {
              "type": "array",
              "value": "[if(variables('keepPolicies'), reference(resourceId('Microsoft.KeyVault/vaults', parameters('keyVaultName')), '2019-09-01', 'Full').properties.accessPolicies, variables('defaultAccessPolicies'))]"
            }
          }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2019-10-01",
      "name": "kvTemplate",
      "properties": {
        "expressionEvaluationOptions": {
          "scope": "outer"
        },
        "mode": "Incremental",
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "variables": {
          },
          "resources": [
            {
              "type": "Microsoft.Resources/tags",
              "name": "default",
              "apiVersion": "2019-10-01",
              "dependsOn": [
              ],
              "properties": {
                "tags": {
                  "KV-Keep-Policies": "true"
                }
              }
            },
            {
              "type": "Microsoft.KeyVault/vaults",
              "name": "[parameters('keyVaultName')]",
              "apiVersion": "2019-09-01",
              "location": "[resourceGroup().location]",
              "dependsOn": [
                "default"
              ],
              "properties": {
                "enableSoftDelete": false,
                "tenantId": "[parameters('tenantId')]",
                "accessPolicies": "[reference('prepareTemplate').outputs.accessPolicies.value]",
                "sku": {
                  "name": "Standard",
                  "family": "A"
                }
              }
            }
          ],
          "outputs": {
          }
        }
      }
    }
  ],
  "outputs": {
    "accessPolicies": {
      "type": "array",
      "value": "[reference(resourceId('Microsoft.KeyVault/vaults', parameters('keyVaultName')), '2019-09-01', 'Full').properties.accessPolicies]"
    }
  }
}
